<Window x:Class="UDSH.View.ContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDSH.View"
        xmlns:Conv="clr-namespace:UDSH.Converters"
        xmlns:VM="clr-namespace:UDSH.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="ContentWindow" Height="450" Width="1000" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Conv:HeightConverter x:Key="HeightConverter"/>
    </Window.Resources>

    <Grid x:Name="GridContent" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Focusable="True" Margin="{Binding GridContentMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Border x:Name="NavBorder" Grid.Row="0" Background="#C5C5C5" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="4" Margin="250,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource ContentBackButton}" Command="{Binding BackButton}" IsEnabled="{Binding IsNormalState}"/>
                <Image Source="/Resource/HorusEyeDarkGrey.png" Margin="15,3,15,3"/>
                <Button Style="{StaticResource ContentNextButton}" Command="{Binding ReturnButton}" IsEnabled="{Binding IsNormalState}"/>
            </StackPanel>
        </Border>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
            <ComboBox x:Name="AddComboBox" Style="{StaticResource AddComboBox}" SelectedIndex="{Binding SelectedAddIndex}" Margin="0,0,10,0" IsEnabled="{Binding IsNormalState}">
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FolderContent.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="Folder" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FileType.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="MKB File" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FileType.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="MKC File" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FileType.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="MKM File" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding AddSelectionChanged}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <ComboBox Style="{StaticResource FilterComboBox}" Margin="0,0,10,0" SelectedIndex="{Binding SelectedFilterIndex}" IsEnabled="{Binding IsNormalState}">
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/None.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="None" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FileType.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="MKB Only" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>

                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FileType.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="MKC Only" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/FileType.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="MKM Only" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding FilterSelectionChanged}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <ComboBox Style="{StaticResource SortComboBox}" Margin="0,0,10,0" SelectedIndex="{Binding SelectedSortIndex}" IsEnabled="{Binding IsNormalState}">
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/AToZ.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="(A-Z) Files First" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/ZToA.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="(Z-A) Files First" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>

                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/AToZ.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="(A-Z) Folders First" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/ZToA.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="(Z-A) Folders First" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding SortSelectionChanged}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <ComboBox Style="{StaticResource ViewComboBox}" Margin="0,0,20,0" SelectedIndex="{Binding SelectedViewIndex}" IsEnabled="{Binding IsNormalState}">
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/Medium.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="Large Icons" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resource/Small.png" Width="15" Height="15"/>
                        <TextBlock Style="{StaticResource DefaultText}" Text="Details" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>
                </ComboBoxItem>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ViewSelectionChanged}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <Border HorizontalAlignment="Stretch" Background="{StaticResource SearchBarSCB}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                    CornerRadius="4" Height="40" Width="40" FocusVisualStyle="{x:Null}" IsEnabled="{Binding IsNormalState}">
                <!-- Searchbar Details -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                    <!-- Search Icon -->
                    <Image Source="/Resource/Search.png" Margin="7" Panel.ZIndex="0" IsHitTestVisible="False" RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <!-- Text Container -->
                    <Grid Margin="4,0,0,0" VerticalAlignment="Center">
                        <!-- Search Highlight (Search...) -->
                        <TextBlock Text="Search..." Foreground="{StaticResource SearchTextHeaderSCB}" Panel.ZIndex="0" FontSize="18" FontWeight="SemiBold" Focusable="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultText}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Search Text -->
                        <TextBox x:Name="UserSearchBox" Background="{StaticResource MainBlankSCB}" FontSize="18" FontWeight="DemiBold" Width="350"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="GotFocus">
                                    <i:InvokeCommandAction Command="{Binding SearchBoxGotFocus}" CommandParameter="{Binding ElementName=UserSearchBox}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </Grid>
                </StackPanel>


                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSearchBoxBorderOpen}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="400" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="40" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="GotFocus">
                        <i:InvokeCommandAction Command="{Binding SearchBoxFocus}"/>
                    </i:EventTrigger>

                    <i:EventTrigger EventName="MouseEnter">
                        <i:InvokeCommandAction Command="{Binding SearchBoxMouseEnter}"/>
                    </i:EventTrigger>

                    <i:EventTrigger EventName="MouseLeave">
                        <i:InvokeCommandAction Command="{Binding SearchBoxMouseLeave}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Border>
        </StackPanel>

        <!-- Content Layout -->
        <Grid x:Name="ListGrid" Grid.Row="1" Margin="0,5,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="20"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="SideContentTreeView" ItemsSource="{Binding Root.SubNodes}" Margin="5,-5,5,0" Style="{StaticResource SideContentTreeView}" IsEnabled="{Binding IsNormalState}"
                      Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Converter={StaticResource HeightConverter}, ConverterParameter=110}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type VM:Node}" ItemsSource="{Binding SubNodes}">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding NodeImage}" Width="16" Height="16" Margin="0,0,0,0"/>
                            <TextBlock Style="{StaticResource DefaultText}" Text="{Binding Name}" FontSize="16" Margin="5,0,0,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectedItemChanged">
                        <i:InvokeCommandAction Command="{Binding TreeViewSelectionChanged}" PassEventArgsToCommand="True"/>
                    </i:EventTrigger>

                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding TreeViewMouseDoubleClick}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TreeView>

            <GridSplitter Grid.Column="1" Width="40" Margin="0,0,0,0" DragDelta="GridSplitter_DragDelta" HorizontalAlignment="Center">
                <GridSplitter.Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="Background" Value="#C5C5C5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridSplitter">
                                    <Border CornerRadius="2" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <Border x:Name="UpperBorder" Grid.Row="0" Background="#C5C5C5" Width="10" CornerRadius="2" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            <Image Grid.Row="1" Source="/Resource/HandHandle.png" Width="40" Height="40"/>
                                            <Image x:Name="ImageMouseOver" Grid.Row="1" Source="/Resource/HandHandleHighlight.png" Width="40" Height="40" Opacity="0"/>
                                            <Border Grid.Row="1" Background="#C5C5C5" Opacity="0" Width="40" CornerRadius="2" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            <Border x:Name="BottomBorder" Grid.Row="2" Background="#C5C5C5" Width="10" CornerRadius="2" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="UpperBorder" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                        To="#2D2D2D" Duration="0:0:0.2"/>
                                                        <ColorAnimation Storyboard.TargetName="BottomBorder" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                        To="#2D2D2D" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="ImageMouseOver" Storyboard.TargetProperty="Opacity"
                                                                         To="1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetName="UpperBorder" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                        To="#C5C5C5" Duration="0:0:0.2"/>
                                                        <ColorAnimation Storyboard.TargetName="BottomBorder" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                        To="#C5C5C5" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="ImageMouseOver" Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GridSplitter.Style>
            </GridSplitter>

            <!-- Files and Folder List -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Border Height="5" VerticalAlignment="Top" CornerRadius="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#FFC5C5C5"/>
                                <GradientStop Color="#FFC5C5C5" Offset="1"/>
                                <GradientStop Color="#FF5F5F5F" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsContentLoading}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <RemoveStoryboard BeginStoryboardName="RenameAnimation"/>
                                            <RemoveStoryboard BeginStoryboardName="CanceledAnimation"/>
                                            
                                            <BeginStoryboard x:Name="LoadingAnimation">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                                                    To="#DBAD2F" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)" 
                                                                    To="#DBAD2F" Duration="0:0:1"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                                                    To="#DBAD2F" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                                                    To="#FFC5C5C5" Duration="0:0:1"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)" 
                                                                    To="#FF5F5F5F" Duration="0:0:1"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                                                    To="#FFC5C5C5" Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding IsContentRenameProcess}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <RemoveStoryboard BeginStoryboardName="LoadingAnimation"/>
                                            <RemoveStoryboard BeginStoryboardName="CanceledAnimation"/>

                                            <BeginStoryboard x:Name="RenameAnimation">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                                                    To="#2FA7DB" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)" 
                                                                    To="#2FA7DB" Duration="0:0:1"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                                                    To="#2FA7DB" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding IsContentCanceledProcess}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <RemoveStoryboard BeginStoryboardName="LoadingAnimation"/>
                                            <RemoveStoryboard BeginStoryboardName="RenameAnimation"/>
                                            
                                            <BeginStoryboard x:Name="CanceledAnimation">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                                                    To="#F83030" Duration="0:0:1" AutoReverse="True" RepeatBehavior="2x"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)" 
                                                                    To="#F83030" Duration="0:0:1"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                                                    To="#F83030" Duration="0:0:1" AutoReverse="True" RepeatBehavior="2x"/>

                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)" 
                                                                    To="#FFC5C5C5" Duration="0:0:1" BeginTime="0:0:3"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)" 
                                                                    To="#FF5F5F5F" Duration="0:0:1" BeginTime="0:0:3"/>
                                                    <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)" 
                                                                    To="#FFC5C5C5" Duration="0:0:1" BeginTime="0:0:3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </Grid>
                <Grid Grid.Row="1">
                    <ListView Opacity="{Binding DetailsListViewOpacity}" AllowDrop="True" Loaded="ListView_Loaded_1" IsHitTestVisible="{Binding DetailsListViewHitTest}" IsEnabled="{Binding IsNormalState}" ItemsSource="{Binding CurrentFiles}" SelectedItem="{Binding SelectedItem}" Style="{StaticResource ContentDirectoryLayout}" ItemContainerStyle="{StaticResource ContentDirectoryListItem}">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource Content_GridViewColumnHeader}">
                                <GridViewColumn Header="Name" Width="{Binding ColWidth1, Mode=TwoWay}">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Grid.Column="0" Source="{Binding Image}" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                                            <Setter Property="Opacity" Value="1"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Opacity" Value="0"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <Image Grid.Column="0" Source="/Resource/HorusEyeOrange.png" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                                            <Setter Property="Opacity" Value="0"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Opacity" Value="1"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>

                                                <Image Grid.Column="1" Source="/Resource/RenameState.png" Height="25" Margin="7,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                                            <Setter Property="Opacity" Value="0"/>

                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True"/>
                                                                        <Condition Binding="{Binding DataContext.OpenRenameTextBox, RelativeSource={RelativeSource AncestorType=ListView}}" Value="True"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <MultiDataTrigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </MultiDataTrigger.EnterActions>
                                                                    <MultiDataTrigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </MultiDataTrigger.ExitActions>
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="18" Margin="7,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultText}">
                                                            <Setter Property="Foreground" Value="#000000"/>
                                                            <Setter Property="Opacity" Value="1"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Foreground" Value="#DBAD2F"/>
                                                                    <DataTrigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                                                                                 To="5.0" Duration="0:0:0.3" BeginTime="0:0:0.3"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.EnterActions>
                                                                    <DataTrigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                                                                                 To="0.0" Duration="0:0:0.3"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.ExitActions>
                                                                </DataTrigger>

                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True" />
                                                                        <Condition Binding="{Binding DataContext.OpenRenameTextBox, RelativeSource={RelativeSource AncestorType=ListView}}" Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <MultiDataTrigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
