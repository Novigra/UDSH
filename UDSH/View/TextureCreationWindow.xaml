<Window x:Class="UDSH.View.TextureCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDSH.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="TextureCreationWindow" Height="650" Width="900" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,15,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource DefaultText}" Text="File Name"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Font Family" Margin="0,25,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Foreground" Margin="0,28,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Resolution" Margin="0,28,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Background" Margin="0,28,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Output Name" Margin="0,28,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="-5,20,0,0">
                    <Button Style="{StaticResource ExportButtonTexture}" Width="100" Height="40"/>
                    <Button Style="{StaticResource ExportDirectoryButtonTexture}" Width="50" Height="40" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
            <Rectangle Width="6" Height="400" Margin="15,-5,0,0" Fill="{StaticResource BorderLBG}" RadiusX="2" RadiusY="2" VerticalAlignment="Top"/>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <TextBlock Style="{StaticResource DefaultText}" Text="{Binding AssociateFileName}"/>
                <Button Command="{Binding FontFamilyButton}" Height="35" Width="300" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                            <Grid>
                                                <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="{Binding FontFamily}" Foreground="#666666" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Ellipse x:Name="Dot1" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot2" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot3" Width="5" Height="5" Fill="#666666"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Height="35" Width="300" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                            <Grid>
                                                <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="Pick Foreground" Foreground="#666666" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Ellipse x:Name="Dot1" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot2" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot3" Width="5" Height="5" Fill="#666666"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                            To="#393E46" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Border x:Name="ResolutionBorder" HorizontalAlignment="Left" Background="{StaticResource SearchBarSCB}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                            CornerRadius="5" Height="35" Width="100" FocusVisualStyle="{x:Null}">
                        <!-- Textbox Details -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                            <!-- Text Container -->
                            <Grid Margin="10,0,4,0" VerticalAlignment="Center">
                                <!-- Text Highlight -->
                                <TextBlock x:Name="HighlightText" Text="Dpi..." Foreground="{StaticResource SearchTextHeaderSCB}" Panel.ZIndex="0" FontSize="20" FontWeight="SemiBold" Focusable="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DpiNumber}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Res Text -->
                                <TextBox x:Name="ResTextBox" Background="{StaticResource MainBlankSCB}" FontSize="20" FontWeight="DemiBold" Width="80"
                                         Text="{Binding DpiNumber, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding ProjectNameChanged}" CommandParameter="{Binding ElementName=UserSearchBox}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <TextBlock Style="{StaticResource DefaultText}" Foreground="#666666" Text="Recommended: Below 600" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Height="35" Width="300" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                                    <Border Background="Black" Width="20" Height="20"/>
                                                    <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="Pick Background" Foreground="#666666" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Ellipse x:Name="Dot1" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot2" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot3" Width="5" Height="5" Fill="#666666"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Border HorizontalAlignment="Left" Background="{StaticResource SearchBarSCB}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                        CornerRadius="5" Height="35" Width="300" FocusVisualStyle="{x:Null}" Margin="0,20,0,0">
                    <!-- Textbox Details -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                        <!-- Text Container -->
                        <Grid Margin="10,0,4,0" VerticalAlignment="Center">
                            <!-- Text Highlight -->
                            <TextBlock Text="PyramidScheme..." Foreground="{StaticResource SearchTextHeaderSCB}" Panel.ZIndex="0" FontSize="20" FontWeight="SemiBold" Focusable="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OutputName}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Out Text -->
                            <TextBox x:Name="OutputTextBox" Background="{StaticResource MainBlankSCB}" FontSize="20" FontWeight="DemiBold" Width="280"
                                     Text="{Binding OutputName, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="TextChanged">
                                        <i:InvokeCommandAction Command="{Binding ProjectNameChanged}" CommandParameter="{Binding ElementName=UserSearchBox}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Background="#767676" CornerRadius="5" Margin="20,0,20,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <RichTextBox Style="{StaticResource MKText}" IsHitTestVisible="False" Foreground="White" Background="Transparent" FontSize="30" Margin="5,5,5,0">
                        <FlowDocument>
                            <Paragraph>
                                <Run x:Name="TextTest" Text="And behold, the Pharaoh replaced us with AI, and the pyramids we built no more."/>
                                <Paragraph.Style>
                                    <Style TargetType="Paragraph">
                                    </Style>
                                </Paragraph.Style>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>

                    <Border Grid.Row="1" Background="#3E3E3E" CornerRadius="0,0,5,5">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Style="{StaticResource XCheckBox}" Margin="0,3,0,0"/>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Underline" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" Margin="0,3,0,0"/>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Strikethrough" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" Margin="0,3,0,0"/>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Font" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" Margin="0,3,0,0"/>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Foreground" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" Margin="0,3,0,0"/>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Background" Foreground="#FFFFFF"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Foreground" Value="#1D1B20"/>
            <Setter Property="Background" Value="{StaticResource MainContentWindowBackgroundSCB}"/>
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome UseAeroCaptionButtons="False" CaptionHeight="70"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border x:Name="WindowBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <Grid x:Name="Layout" Background="{TemplateBinding Background}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid x:Name="WindowTitlePanel" Height="40" Background="Transparent" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Image Source="/Resource/TextureImage.png" VerticalAlignment="Center" Margin="15,0,0,0" Width="35" Height="35"/>
                                        <TextBlock Style="{StaticResource DefaultText}" Text="Texture Creation Process" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel x:Name="WindowCommandButtons" Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0"
                                        HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent">
                                        <Button x:Name="CloseButton" Width="40" Height="40" Style="{StaticResource Content_CloseButton}" Command="{Binding CloseButton}" WindowChrome.IsHitTestVisibleInChrome="True"/>
                                    </StackPanel>
                                </Grid>

                                <AdornerDecorator Grid.Row="1" KeyboardNavigation.IsTabStop="False">
                                    <ContentPresenter x:Name="MainContentPresenter" Content="{TemplateBinding Content}" KeyboardNavigation.TabNavigation="Cycle"/>
                                </AdornerDecorator>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
</Window>
