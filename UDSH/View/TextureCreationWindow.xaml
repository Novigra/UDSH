<Window x:Class="UDSH.View.TextureCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDSH.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="TextureCreationWindow" Height="650" Width="1030" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,15,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource DefaultText}" Text="File Name"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Font Family" Margin="0,25,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Foreground" Margin="0,28,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Resolution" Margin="0,28,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Background" Margin="0,28,0,0"/>
                <TextBlock Style="{StaticResource DefaultText}" Text="Output Name" Margin="0,28,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="-5,20,0,0">
                    <Button Style="{StaticResource ExportButtonTexture}" Command="{Binding ExportButton}" Width="100" Height="40"/>
                    <Button Style="{StaticResource ExportDirectoryButtonTexture}" Command="{Binding ExportDirectoryButton}" Width="50" Height="40" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
            <Rectangle Width="6" Height="400" Margin="15,-5,0,0" Fill="{StaticResource BorderLBG}" RadiusX="2" RadiusY="2" VerticalAlignment="Top"/>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <TextBlock Style="{StaticResource DefaultText}" Text="{Binding AssociateFileName}"/>
                <Button x:Name="FontFamilyButton" Command="{Binding FontFamilyButton}" Height="35" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                                                    <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="{Binding FontFamily}" Foreground="#666666" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                    <Border Background="Transparent" Width="60"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Ellipse x:Name="Dot1" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot2" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot3" Width="5" Height="5" Fill="#666666"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="ForegroundButton" Command="{Binding ForegroundButton}" Height="35" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Popup x:Name="ForegroundPopup" IsOpen="{Binding CanOpenForegroundPopup, UpdateSourceTrigger=PropertyChanged}" StaysOpen="False" PlacementTarget="{Binding ElementName=ForegroundButton}" AllowsTransparency="True" Placement="Relative" PopupAnimation="Fade" VerticalOffset="40">
                        <Border Background="{StaticResource MainContentWindowBackgroundSCB}" BorderBrush="#A5A5A5" BorderThickness="3" CornerRadius="5" Width="200" Height="250">
                            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                                <Border x:Name="ForegroundPopupBorder" Background="{Binding ForegroundColor}" Width="100" Height="100" HorizontalAlignment="Center"/>
                                <TextBlock Style="{StaticResource DefaultText}" Text="Hex" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource DefaultText}" Text="#" FontSize="30" Foreground="#A5A5A5" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <Border x:Name="ForegroundBorder" HorizontalAlignment="Left" Background="{StaticResource SearchBarSCB}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                                            CornerRadius="5" Height="35" Width="150" FocusVisualStyle="{x:Null}" Margin="5,0,0,0">
                                        <!-- Textbox Details -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                                            <!-- Text Container -->
                                            <Grid Margin="4,0,4,0" VerticalAlignment="Center">
                                                <!-- Foreground Text -->
                                                <TextBox x:Name="ForegroundTextBox" Background="{StaticResource MainBlankSCB}" FontSize="20" FontWeight="DemiBold" Width="135"
                                                         Text="{Binding ForegroundHexColor, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="TextChanged">
                                                            <i:InvokeCommandAction Command="{Binding ForegroundHexColorChanged}"/>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                                    <Button Command="{Binding ForegroundConfirmButton}" Height="35" Width="100" HorizontalAlignment="Left" Margin="0,0,5,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                                                <Grid>
                                                                    <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="Confirm" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                                                To="#393E46" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                                                To="#DBAD2F" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                                                To="#DBAD2F" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>

                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                                                To="#FFFFFF" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                                                To="#A5A5A5" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                                                To="#666666" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Command="{Binding DefaultForegroundButton}" Height="35" Width="35" HorizontalAlignment="Left" Margin="5,0,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                                                <Grid>
                                                                    <Border Background="#000000" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                                                To="#393E46" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                                                To="#DBAD2F" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>

                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                                                To="#FFFFFF" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                                                To="#A5A5A5" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Popup>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                                    <Border Background="{Binding FinalForegroundColor}" Width="20" Height="20"/>
                                                    <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="{Binding FinalForegroundColor}" Foreground="#666666" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                    <Border Background="Transparent" Width="60"/>
                                                </StackPanel>
                                                
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Ellipse x:Name="Dot1" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot2" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot3" Width="5" Height="5" Fill="#666666"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                            To="#393E46" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="#666666" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Border x:Name="ResolutionBorder" HorizontalAlignment="Left" Background="{Binding DpiBorderColor}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                            CornerRadius="5" Height="35" Width="100" FocusVisualStyle="{x:Null}">
                        <!-- Textbox Details -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                            <!-- Text Container -->
                            <Grid Margin="10,0,4,0" VerticalAlignment="Center">
                                <!-- Text Highlight -->
                                <TextBlock x:Name="HighlightText" Text="Dpi..." Foreground="{StaticResource SearchTextHeaderSCB}" Panel.ZIndex="0" FontSize="20" FontWeight="SemiBold" Focusable="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DpiNumber}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Res Text -->
                                <TextBox x:Name="ResTextBox" Background="{StaticResource MainBlankSCB}" FontSize="20" FontWeight="DemiBold" Width="80"
                                         Text="{Binding DpiNumber, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding ResolutionChanged}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <TextBlock Style="{StaticResource DefaultText}" Foreground="{Binding ResolutionMessageFontColor}" Text="{Binding ResolutionMessage}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button x:Name="BackgroundButton" Command="{Binding BackgroundButton}" Height="35" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Popup x:Name="BackgroundPopup" IsOpen="{Binding CanOpenBackgroundPopup, UpdateSourceTrigger=PropertyChanged}" StaysOpen="False" PlacementTarget="{Binding ElementName=BackgroundButton}" AllowsTransparency="True" Placement="Relative" PopupAnimation="Fade" VerticalOffset="40">
                        <Border Background="{StaticResource MainContentWindowBackgroundSCB}" BorderBrush="#A5A5A5" BorderThickness="3" CornerRadius="5" Width="200" Height="250">
                            <StackPanel Orientation="Vertical" Margin="0,15,0,0">
                                <Grid>
                                    <Image Source="/Resource/TransparentIcon.png" Width="100" Height="100" HorizontalAlignment="Center"/>
                                    <Border x:Name="BackgroundPopupBorder" Background="{Binding BackgroundColor}" Width="100" Height="100" HorizontalAlignment="Center"/>
                                </Grid>
                                <TextBlock Style="{StaticResource DefaultText}" Text="Hex" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource DefaultText}" Text="#" FontSize="30" Foreground="#A5A5A5" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <Border x:Name="BackgroundBorder" HorizontalAlignment="Left" Background="{StaticResource SearchBarSCB}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                                            CornerRadius="5" Height="35" Width="150" FocusVisualStyle="{x:Null}" Margin="5,0,0,0">
                                        <!-- Textbox Details -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                                            <!-- Text Container -->
                                            <Grid Margin="4,0,4,0" VerticalAlignment="Center">
                                                <!-- Foreground Text -->
                                                <TextBox x:Name="BackgroundTextBox" Background="{StaticResource MainBlankSCB}" FontSize="20" FontWeight="DemiBold" Width="135"
                                                         Text="{Binding BackgroundHexColor, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="TextChanged">
                                                            <i:InvokeCommandAction Command="{Binding BackgroundHexColorChanged}"/>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </TextBox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                                    <Button Command="{Binding BackgroundConfirmButton}" Height="35" Width="100" HorizontalAlignment="Left" Margin="0,0,5,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                                                <Grid>
                                                                    <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="Confirm" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>

                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Command="{Binding DefaultBackgroundButton}" Height="35" Width="35" HorizontalAlignment="Left" Margin="5,0,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FFFFFF"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                                                <Grid>
                                                                    <Image Source="/Resource/TransparentIcon.png" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>

                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                                                <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Popup>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFFFFF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bBorder" Background="{TemplateBinding Background}" BorderBrush="#A5A5A5" BorderThickness="2" CornerRadius="5">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                                    <Grid>
                                                        <Image Source="/Resource/TransparentIcon.png" Width="20" Height="20"/>
                                                        <Border Background="{Binding FinalBackgroundColor}" Width="20" Height="20"/>
                                                    </Grid>
                                                    <TextBlock x:Name="Title" Style="{StaticResource DefaultText}" Text="{Binding FinalBackgroundColor}" Foreground="#666666" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                    <Border Background="Transparent" Width="60"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                                                    <Ellipse x:Name="Dot1" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot2" Width="5" Height="5" Fill="#666666" Margin="0,0,5,0"/>
                                                    <Ellipse x:Name="Dot3" Width="5" Height="5" Fill="#666666"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#DBAD2F" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>

                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="bBorder" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="#A5A5A5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Title" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                                            To="#666666" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Border HorizontalAlignment="Left" Background="{Binding OutputBorderColor}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                            CornerRadius="5" Height="35" Width="300" FocusVisualStyle="{x:Null}">
                        <Grid>
                            <Ellipse Fill="#F83030" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" Opacity="{Binding ExportRedWarningOutput}" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="10" Y="-10"/>
                                    </TransformGroup>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <!-- Textbox Details -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                                <!-- Text Container -->
                                <Grid Margin="10,0,4,0" VerticalAlignment="Center">
                                    <!-- Text Highlight -->
                                    <TextBlock Text="{Binding OutputNameMark}" TextTrimming="CharacterEllipsis" Width="280" HorizontalAlignment="Left" Foreground="{StaticResource SearchTextHeaderSCB}" Panel.ZIndex="0" FontSize="20" FontWeight="SemiBold" Focusable="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding OutputName}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Out Text -->
                                    <TextBox x:Name="OutputTextBox" Background="{StaticResource MainBlankSCB}" FontSize="20" FontWeight="DemiBold" Width="280"
                                             Text="{Binding OutputName, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction Command="{Binding OutputNameChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <TextBlock Style="{StaticResource DefaultText}" Foreground="#F83030" Text="{Binding OutputWarningMessage}" Opacity="{Binding OutputWarningMessageOpacity}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Background="#767676" CornerRadius="5" Margin="20,0,20,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Grid Opacity="{Binding BackgroundGridOpacity}">
                        <Image Source="/Resource/TransparentBackground.png" Stretch="UniformToFill"/>
                        <Border Background="{Binding FinalBackgroundColor}"/>
                    </Grid>

                    <RichTextBox x:Name="PreviewRTB" Style="{StaticResource MKText}" IsHitTestVisible="False" Foreground="White" Background="Transparent" FontSize="30" Margin="5,5,5,0">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="And behold, the Pharaoh replaced us with AI, and the pyramids we built no more."/>
                                <Paragraph.Style>
                                    <Style TargetType="Paragraph">
                                    </Style>
                                </Paragraph.Style>
                            </Paragraph>
                        </FlowDocument>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding PreviewRTBLoaded}" CommandParameter="{Binding ElementName=PreviewRTB}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RichTextBox>

                    <Border Grid.Row="1" Background="#3E3E3E" CornerRadius="0,0,5,5">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsHitTestVisible="{Binding RegularCheckCollision}" IsChecked="{Binding RegularCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding RegularCheckChanged}"/>
                                            </i:EventTrigger>

                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Regular" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsHitTestVisible="{Binding BoldCheckCollision}" IsChecked="{Binding BoldCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding BoldCheckChanged}"/>
                                            </i:EventTrigger>

                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Bold" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsChecked="{Binding ItalicCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding ItalicCheckChanged}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding ItalicCheckChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Italic" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsChecked="{Binding UnderlineCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding UnderlineCheckChanged}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding StrikethroughCheckChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Underline" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsChecked="{Binding StrikethroughCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding StrikethroughCheckChanged}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding UnderlineCheckChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Strikethrough" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsChecked="{Binding FontCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding FontCheckChanged}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding FontCheckChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Font" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsChecked="{Binding ForegroundCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding ForegroundCheckChanged}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding ForegroundCheckChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Foreground" Foreground="#FFFFFF"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <CheckBox Style="{StaticResource XCheckBox}" IsChecked="{Binding BackgroundCheck, UpdateSourceTrigger=PropertyChanged}" Margin="0,3,0,0">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Checked">
                                                <i:InvokeCommandAction Command="{Binding BackgroundCheckChanged}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Unchecked">
                                                <i:InvokeCommandAction Command="{Binding BackgroundCheckChanged}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </CheckBox>
                                    <TextBlock Style="{StaticResource DefaultText}" Text="Background" Foreground="#FFFFFF"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Foreground" Value="#1D1B20"/>
            <Setter Property="Background" Value="{StaticResource MainContentWindowBackgroundSCB}"/>
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome UseAeroCaptionButtons="False" CaptionHeight="70"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border x:Name="WindowBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <Grid x:Name="Layout" Background="{TemplateBinding Background}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid x:Name="WindowTitlePanel" Height="40" Background="Transparent" Margin="0,5,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Image Source="/Resource/TextureImage.png" VerticalAlignment="Center" Margin="15,0,0,0" Width="35" Height="35"/>
                                        <TextBlock Style="{StaticResource DefaultText}" Text="Texture Creation Process" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel x:Name="WindowCommandButtons" Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0"
                                        HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent">
                                        <Button x:Name="CloseButton" Width="40" Height="40" Style="{StaticResource Content_CloseButton}" Command="{Binding CloseButton}" WindowChrome.IsHitTestVisibleInChrome="True"/>
                                    </StackPanel>
                                </Grid>

                                <AdornerDecorator Grid.Row="1" KeyboardNavigation.IsTabStop="False">
                                    <ContentPresenter x:Name="MainContentPresenter" Content="{TemplateBinding Content}" KeyboardNavigation.TabNavigation="Cycle"/>
                                </AdornerDecorator>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
</Window>
