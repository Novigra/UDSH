        </Grid>

        <!-- Folder Directory -->
        <Image Panel.ZIndex="2" x:Name="FolderHighlight" Source="/Resource/DirectoryFolderOpen.png" Width="42" Height="42" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,5,0,0" Opacity="0" IsHitTestVisible="False">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>

