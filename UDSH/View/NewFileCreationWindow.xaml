                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,15">
                    <TextBlock Text="Classic Script Format" Style="{StaticResource DefaultText}" HorizontalAlignment="Center"/>
                    <Image Source="/Resource/MKC_Large.png" Width="200" Height="200" Margin="0,10,0,0"/>
                    <TextBlock Text="A Linear Story Formatted Like A Screenplay." Style="{StaticResource DefaultText}" Margin="20,10,20,0" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
