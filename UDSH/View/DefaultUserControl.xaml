<UserControl x:Class="UDSH.View.DefaultUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UDSH.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="2" Panel.ZIndex="1" Source="/Resource/BackgroundIcon.png" MouseLeftButtonDown="ObjectFocus" 
               IsHitTestVisible="True" HorizontalAlignment="Center" VerticalAlignment="Center" Width="270" Height="270" Focusable="True" FocusVisualStyle="{x:Null}"/>

        <Rectangle Grid.ColumnSpan="2" Fill="{StaticResource MainBackgroundCSFSCB}" MouseLeftButtonDown="ObjectFocus" Focusable="True"/>

        <Grid x:Name="SideContentGrid" Grid.Column="0">
            <!-- <local:SideContentUserControl/> -->

        </Grid>

    </Grid>
</UserControl>
