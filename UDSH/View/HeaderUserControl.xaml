<UserControl x:Class="UDSH.View.HeaderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:UDSH.View"
             mc:Ignorable="d" 
             Focusable="True"
             d:DesignHeight="80" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- Testing Ground 
<TextBlock Grid.Column="1" Text="Number Test" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="450,0,0,0" Panel.ZIndex="5"/>
<TextBlock Name="InterpNumber" Grid.Column="1" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="550,0,0,0" Panel.ZIndex="5"/> -->

            <!-- Logo Placement -->
            <Rectangle Grid.Column="0" Fill="#FFADADAD" Panel.ZIndex="0"/>
            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/Logo.png" Margin="-10"/>

            <!-- Titles -->
            <Rectangle Grid.Column="1" Fill="#CDCDCD"/>
            <TextBlock Name="ProjectName" Grid.Column="1" Style="{StaticResource DefaultText}" Text="{Binding ProjectName}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>


            <Grid Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <!-- Emoji and flags placeholders -->
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Style="{StaticResource DefaultText}" Text="UDSH" VerticalAlignment="Center" Margin="0,0,0,0"/>
                <TextBlock Grid.Column="1" Style="{StaticResource DefaultText}" Text="|" VerticalAlignment="Center" Margin="5,0,5,5" FontWeight="SemiBold"/>
                <TextBlock Name="UserName" Style="{StaticResource DefaultText}" Grid.Column="2" Text="{Binding DisplayName}" VerticalAlignment="Center" Margin="0,0,0,0"/>

                <!-- <Image Grid.Column="3" Source="/Resource/FlagTest.png" VerticalAlignment="Center" Margin="10,8,0,8"/> -->
                <TextBlock Grid.Column="3" Style="{StaticResource DefaultText}" Text="𓀀" VerticalAlignment="Center" Margin="0,0,0,0"/>
                <TextBlock Grid.Column="4" Style="{StaticResource DefaultText}" Text="𓀀" VerticalAlignment="Center" Margin="0,0,0,0"/>
                <TextBlock Grid.Column="5" Style="{StaticResource DefaultText}" Text="𓀀" VerticalAlignment="Center" Margin="0,0,0,0"/>
            </Grid>

            <!-- Page Controls -->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0" Panel.ZIndex="0"/>
                <Button Grid.Column="0" Panel.ZIndex="1" Click="MinimizeButton"/>
                <Image Grid.Column="0" Panel.ZIndex="2" Source="/Resource/Minimize.png" Margin="12,10,12,10"/>

                <Rectangle Grid.Column="1" Panel.ZIndex="0"/>
                <Button Grid.Column="1" Panel.ZIndex="1" Click="MaximizeButton"/>
                <Image Grid.Column="1" Panel.ZIndex="2" Source="/Resource/Normal.png" Margin="15,13,15,13"/>

                <Rectangle Grid.Column="2" Panel.ZIndex="0"/>
                <Button Grid.Column="2" Panel.ZIndex="1" Style="{StaticResource CloseButton}" Click="CloseButton"/>
                <Image Grid.Column="2" Panel.ZIndex="2" Source="/Resource/Close.png" Margin="15,13,15,13"/>

            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- Background -->
            <Rectangle Grid.ColumnSpan="4" Fill="#EEEEEE"/>

            <!-- PenTool -->
            <Grid Grid.Column="0">
                <Button Name="PenTool" Panel.ZIndex="0" Margin="5" Command="{Binding PenToolLeftMouseButtonDown}">
                    <StackPanel Orientation="Horizontal"> <!-- remove it, if we know mouse location? -->
                        <Popup x:Name="MyPop" IsOpen="{Binding CanClosePopup}" StaysOpen="False" AllowsTransparency="True" Placement="Mouse" PopupAnimation="Fade" VerticalOffset="5">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Closed">
                                    <i:InvokeCommandAction Command="{Binding PenToolPopupClosed}"/>
                                </i:EventTrigger>


                            </i:Interaction.Triggers>

                            <Border BorderThickness="0" KeyDown="HandleKeyDown" KeyUp="HandleKeyUp" Background="{StaticResource SideContentSCB}" Width="300" CornerRadius="10">
                                <Grid>
                                    <StackPanel x:Name="StackCollision" FocusVisualStyle="{x:Null}" Focusable="True" Panel.ZIndex="0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseEnter">
                                                <i:InvokeCommandAction Command="{Binding MouseEnterPenToolPopup}" CommandParameter="{Binding ElementName=StackCollision}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <!-- Project Content -->
                                        <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                            <!-- Don't forget to bind the textblock to the project name -->
                                            <TextBlock Text="Monster" FontSize="12" FontWeight="Medium"/>
                                            <Rectangle Fill="{StaticResource SideContentTitleBarSCB}" Margin="2,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="240" Height="3" RenderTransformOrigin="0.5,0.5">
                                                <Rectangle.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform/>
                                                        <SkewTransform/>
                                                        <RotateTransform/>
                                                        <TranslateTransform Y="1.5"/>
                                                    </TransformGroup>
                                                </Rectangle.RenderTransform>
                                            </Rectangle>
                                        </StackPanel>

                                        <!-- New File -->
                                        <Grid Focusable="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/NewFile.png" Margin="5" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Panel.ZIndex="1" Text="New File" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <Button Grid.ColumnSpan="3" Command="{Binding NewFile}" IsEnabled="{Binding CanEnablePenToolButton}"/>
                                            <Button Grid.Column="2" Style="{StaticResource QADots}" Command="{Binding QNewFile}" CommandParameter="0"/>
                                            <Border Grid.Column="2" Style="{StaticResource QABorder}"/>
                                            <Border Grid.Column="2" CornerRadius="20" BorderThickness="0" Background="#393E46" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="{StaticResource QuickActionDotsWidthAndHeight}" Width="{StaticResource QuickActionDotsWidthAndHeight}" Margin="{StaticResource QuickActionDotsMargins}" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0.0" ScaleY="0.0"/>
                                                </Border.RenderTransform>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Opacity" Value="1"/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="0"/>
                                                                    <Condition Binding="{Binding PlayDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <RemoveStoryboard BeginStoryboardName="Rev1"/>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="0"/>
                                                                    <Condition Binding="{Binding ReverseDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="Rev1">
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Rectangle Grid.ColumnSpan="2" Style="{StaticResource DisabledPenToolButton}"/> <!-- Stopped Here!!!! -->
                                        </Grid>

                                        <!-- Save -->
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/SaveFile.png" Margin="5" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Panel.ZIndex="1" Text="Save" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <TextBlock Grid.Column="2" Margin="5,0,0,0" Panel.ZIndex="1" Text="MyHouseWad.mkc" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <Button Grid.ColumnSpan="4" Command="{Binding SaveFile}" IsEnabled="{Binding CanEnablePenToolButton}"/>
                                            <Button Grid.Column="3" Style="{StaticResource QADots}" Command="{Binding QSaveFile}" CommandParameter="1"/>
                                            <Border Grid.Column="3" Style="{StaticResource QABorder}"/>
                                            <Border Grid.Column="3" CornerRadius="20" BorderThickness="0" Background="#393E46" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="{StaticResource QuickActionDotsWidthAndHeight}" Width="{StaticResource QuickActionDotsWidthAndHeight}" Margin="{StaticResource QuickActionDotsMargins}" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0.0" ScaleY="0.0"/>
                                                </Border.RenderTransform>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="1"/>
                                                                    <Condition Binding="{Binding PlayDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <RemoveStoryboard BeginStoryboardName="Rev2"/>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="1"/>
                                                                    <Condition Binding="{Binding ReverseDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="Rev2">
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Rectangle Grid.ColumnSpan="3" Style="{StaticResource DisabledPenToolButton}"/>
                                        </Grid>

                                        <!-- Save All -->
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/SaveAllFiles.png" Margin="5" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Panel.ZIndex="1" Text="Save All" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <Button Grid.ColumnSpan="3" Command="{Binding SaveAllFiles}" IsEnabled="{Binding CanEnablePenToolButton}"/>
                                            <Button Grid.Column="2" Style="{StaticResource QADots}" Command="{Binding QSaveAllFiles}" CommandParameter="2"/>
                                            <Border Grid.Column="2" Style="{StaticResource QABorder}"/>
                                            <Border Grid.Column="2" CornerRadius="20" BorderThickness="0" Background="#393E46" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="{StaticResource QuickActionDotsWidthAndHeight}" Width="{StaticResource QuickActionDotsWidthAndHeight}" Margin="{StaticResource QuickActionDotsMargins}" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0.0" ScaleY="0.0"/>
                                                </Border.RenderTransform>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="2"/>
                                                                    <Condition Binding="{Binding PlayDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <RemoveStoryboard BeginStoryboardName="Rev3"/>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="2"/>
                                                                    <Condition Binding="{Binding ReverseDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="Rev3">
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Rectangle Grid.ColumnSpan="2" Style="{StaticResource DisabledPenToolButton}"/>
                                        </Grid>

                                        <!-- Delete -->
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/DeleteFile.png" Margin="5" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Panel.ZIndex="1" Text="Delete" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <TextBlock Grid.Column="2" Margin="5,0,0,0" Panel.ZIndex="1" Text="MyHouseWad.mkc" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <Button Grid.ColumnSpan="4" Command="{Binding DeleteFile}" IsEnabled="{Binding CanEnablePenToolButton}"/>
                                            <Button Grid.Column="3" Style="{StaticResource QADots}" Command="{Binding QDeleteFile}" CommandParameter="3"/>
                                            <Border Grid.Column="3" Style="{StaticResource QABorder}"/>
                                            <Border Grid.Column="3" CornerRadius="20" BorderThickness="0" Background="#393E46" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="{StaticResource QuickActionDotsWidthAndHeight}" Width="{StaticResource QuickActionDotsWidthAndHeight}" Margin="{StaticResource QuickActionDotsMargins}" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0.0" ScaleY="0.0"/>
                                                </Border.RenderTransform>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="3"/>
                                                                    <Condition Binding="{Binding PlayDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <RemoveStoryboard BeginStoryboardName="Rev4"/>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="3"/>
                                                                    <Condition Binding="{Binding ReverseDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="Rev4">
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Rectangle Grid.ColumnSpan="3" Style="{StaticResource DisabledPenToolButton}"/>
                                        </Grid>

                                        <!-- Localization -->
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/Localization.png" Margin="5" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Panel.ZIndex="1" Text="Localization" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <Button Grid.ColumnSpan="3" Command="{Binding Localization}" IsEnabled="{Binding CanEnablePenToolButton}"/>
                                            <Button Grid.Column="2" Style="{StaticResource QADots}" Command="{Binding QLocalization}" CommandParameter="4"/>
                                            <Border Grid.Column="2" Style="{StaticResource QABorder}"/>
                                            <Border Grid.Column="2" CornerRadius="20" BorderThickness="0" Background="#393E46" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="{StaticResource QuickActionDotsWidthAndHeight}" Width="{StaticResource QuickActionDotsWidthAndHeight}" Margin="{StaticResource QuickActionDotsMargins}" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0.0" ScaleY="0.0"/>
                                                </Border.RenderTransform>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="4"/>
                                                                    <Condition Binding="{Binding PlayDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <RemoveStoryboard BeginStoryboardName="Rev5"/>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="4"/>
                                                                    <Condition Binding="{Binding ReverseDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <BeginStoryboard x:Name="Rev5">
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                                             From="1.0"
                                                                                             To="0.0"
                                                                                             Duration="0:0:0.1"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </MultiDataTrigger.EnterActions>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <Rectangle Grid.ColumnSpan="2" Style="{StaticResource DisabledPenToolButton}"/>
                                        </Grid>

                                        <!-- Content -->
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image Grid.Column="0" Panel.ZIndex="1" Source="/Resource/FolderContent.png" Margin="5" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Panel.ZIndex="1" Text="Content" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
                                            <Button Grid.ColumnSpan="3" Command="{Binding ContentFolder}" IsEnabled="{Binding CanEnablePenToolButton}"/>
                                            <Button Grid.Column="2" Style="{StaticResource QADots}" Command="{Binding QContentFolder}" CommandParameter="5"/>
                                            <Border Grid.Column="2" Style="{StaticResource QABorder}"/>
                                            <Border Grid.Column="2" CornerRadius="20" BorderThickness="0" Background="#393E46" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="{StaticResource QuickActionDotsWidthAndHeight}" Width="{StaticResource QuickActionDotsWidthAndHeight}" Margin="{StaticResource QuickActionDotsMargins}" IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0.0" ScaleY="0.0"/>
                                                </Border.RenderTransform>

                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding CurrentDot}" Value="5"/>
                                                                    <Condition Binding="{Binding PlayDotAnim}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <MultiDataTrigger.EnterActions>
                                                                    <RemoveStoryboard BeginStoryboardName="Rev6"/>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                                             From="0.0"
                                                                                             To="1.0"
                                                                                             Duration="0:0:0.1"/>
