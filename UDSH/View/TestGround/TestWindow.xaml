<Window x:Class="UDSH.View.TestGround.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDSH.View.TestGround"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid Background="#393E46">
        <ScrollViewer Style="{StaticResource OpenFilesScrollViewer}" HorizontalScrollBarVisibility="Visible" Loaded="ScrollViewer_Loaded"/>
        

        <Path Fill="Blue" StrokeThickness="2">
            <Path.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="Blue" Offset="1"/>
                </LinearGradientBrush>
            </Path.Stroke>
            <Path.Data>
                <GeometryGroup>
                    <LineGeometry StartPoint="10,90" EndPoint="200,50"/>
                    <PathGeometry>
                        <PathFigure StartPoint="200,50" IsClosed="True">
                            <LineSegment Point="185,45"/>
                            <LineSegment Point="190,60"/>
                        </PathFigure>
                    </PathGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>

        <Border Width="300" Height="300" BorderThickness="0" Background="#9980E3EA"/>
    </Grid>
</Window>
