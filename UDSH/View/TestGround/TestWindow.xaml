<Window x:Class="UDSH.View.TestGround.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDSH.View.TestGround"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid Background="#393E46">
        <ScrollViewer Style="{StaticResource OpenFilesScrollViewer}" HorizontalScrollBarVisibility="Visible" Loaded="ScrollViewer_Loaded"/>
        <Border Width="300" Height="300" BorderThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                    <GradientStop Color="#DBDBDB"/>
                    <GradientStop Color="#00DBDBDB" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

    </Grid>
</Window>
