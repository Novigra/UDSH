<Window x:Class="UDSH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDSH"
        xmlns:userControls="clr-namespace:UDSH.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <userControls:HeaderUserControl Grid.Row="0" MouseLeftButtonDown="HeaderMovement"/>

        <userControls:FooterUserControl Grid.Row="2"/>

    </Grid>
</Window>
