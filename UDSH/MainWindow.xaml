<Window x:Class="UDSH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:UDSH"
        xmlns:userControls="clr-namespace:UDSH.View"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Storyboard x:Key="MKCSearchOpenStoryboard" FillBehavior="Stop" Completed="MKCSearchOpenStoryboard_Completed">
            <DoubleAnimation Storyboard.TargetProperty="Height" From="0" To="400" BeginTime="0:0:0.8" Duration="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Key="MKCSearchCloseStoryboard" FillBehavior="Stop" Completed="MKCSearchCloseStoryboard_Completed">
            <DoubleAnimation Storyboard.TargetProperty="Height" To="0" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>

    <!-- Zero or a super small number? Keep in mind it will affect how the window controls work -->
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0.1" CornerRadius="0.1" CaptionHeight="0.1"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainWindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderUserControl" Grid.Row="0" Panel.ZIndex="1"/>
        <ContentControl x:Name="TestContent" Grid.Row="1" Panel.ZIndex="0"/>
        <Grid x:Name="FooterUserControl" Grid.Row="2" Panel.ZIndex="1"/>

        <Grid x:Name="SideGrid" Grid.Row="1" HorizontalAlignment="Left" Margin="0,40,0,0">
        </Grid>

        <!-- Not a huge fan of this implementation, but this is the cleanest way if we want the side grid to be part of the main window.
             There's always a better solution. find one when you can.-->
        <Grid x:Name="BNButtonSpaceGrid" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Opacity="0" IsHitTestVisible="False" Panel.ZIndex="2">
            <StackPanel Orientation="Vertical">
                <Border x:Name="ConnectionSearchBorder" Margin="0,0,0,10" Width="400" Height="{Binding ResizeConnectionWindowHeight}" CornerRadius="10" Background="#FFFFFF">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <!-- Don't forget to bind mouse enter/leave -->
                            <Button Style="{StaticResource ResizeClose}" Command="{Binding CloseConnection}" HorizontalAlignment="Right" Width="50" Height="30" Margin="0,10,10,0"/>
                            <Border HorizontalAlignment="Center" CornerRadius="5" Width="50" Height="30" Background="#CBCBCB" Margin="0,10,0,0">
                                <Grid>
                                    <Image Source="/Resource/ResizeHeightControl.png" Margin="3">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                <Setter Property="IsHitTestVisible" Value="False"/>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseInsideResizeControl}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <Image Source="/Resource/ResizeHeightControlOrange.png" Margin="3" Opacity="0">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                <Setter Property="IsHitTestVisible" Value="False"/>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseInsideResizeControl}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Grid>

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMouseInsideResizeControl}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#393E46" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
                                                                            To="#CBCBCB" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding StartResizingConnectionHeight}" PassEventArgsToCommand="True"/>
                                    </i:EventTrigger>
                                    
                                    <i:EventTrigger EventName="MouseMove">
                                        <i:InvokeCommandAction Command="{Binding ResizingConnectionMouseMove}" PassEventArgsToCommand="True"/>
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="MouseLeftButtonUp">
                                        <i:InvokeCommandAction Command="{Binding StopResizingConnectionHeight}" PassEventArgsToCommand="True"/>
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="MouseEnter">
                                        <i:InvokeCommandAction Command="{Binding MouseEnteredResizeControl}"/>
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="MouseLeave">
                                        <i:InvokeCommandAction Command="{Binding MouseLeavedResizeControl}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Border>
                        </Grid>

                        <ListView Style="{StaticResource BNConnectionListView}" ItemContainerStyle="{StaticResource BNConnectionListViewItem}" 
                                  ItemsSource="{Binding MKCFiles}" SelectedItem="{Binding SelectedMKCFile}" 
                                  Height="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=ActualHeight, Converter={StaticResource WidthConverter}, ConverterParameter=120}" 
                                  Margin="10,10,10,0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding ConnectBNToMKC}" PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListView>

                        <Border HorizontalAlignment="Stretch" Background="{StaticResource SearchBarSCB}" BorderThickness="2" BorderBrush="{StaticResource SearchBarBorderSCB}" 
                                CornerRadius="4" Margin="6,6,6,0" Height="40" FocusVisualStyle="{x:Null}">
                            <!-- Searchbar Details -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                                <!-- Text Container -->
                                <Grid Margin="4,0,0,0" VerticalAlignment="Center">
                                    <!-- Search Highlight -->
                                    <TextBlock Text="Search..." Foreground="{StaticResource SearchTextHeaderSCB}" Panel.ZIndex="0" FontSize="18" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Search Text -->
                                    <TextBox x:Name="UserSearchBox" Background="{StaticResource MainBlankSCB}" FontSize="18" FontWeight="SemiBold" Width="370"
                                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Panel.ZIndex="1" BorderThickness="0" FocusVisualStyle="{x:Null}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction Command="{Binding SearchTextChange}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MkcConnectionProcessStarted}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource MKCSearchOpenStoryboard}"/>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                
                                <DataTrigger Binding="{Binding MkcConnectionProcessStarted}" Value="False">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource MKCSearchCloseStoryboard}"/>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
                <Grid>
                    <Button Style="{StaticResource BNConnectToMKC}" Command="{Binding ConnectMKCButtonClicked}" IsEnabled="{Binding IsConnectToMKCButtonActive}" IsHitTestVisible="{Binding IsConnectToMKCButtonActive}" HorizontalAlignment="Left"/>
                    <Button x:Name="ConnectedMKCButton" Command="{Binding ConnectedMKCButtonClicked}" Width="50" Style="{StaticResource BNConnectedToMKC}" IsEnabled="{Binding IsConnectedToMKCButtonActive}" IsHitTestVisible="{Binding IsConnectedToMKCButtonActive}" HorizontalAlignment="Left">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseEnter">
                                <i:InvokeCommandAction Command="{Binding ConnectedMKCButtonMouseEnter}" CommandParameter="{Binding ElementName=ConnectedMKCButton}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseLeave">
                                <i:InvokeCommandAction Command="{Binding ConnectedMKCButtonMouseLeave}" CommandParameter="{Binding ElementName=ConnectedMKCButton}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
